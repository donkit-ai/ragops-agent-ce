# Copy this file to .env and adjust values as needed
# The application will automatically load variables from .env if present



# Local SQLite database path
RAGOPS_DB_PATH=./ragops-agent-ce/ragops.db

# LLM provider configuration
# Supported: vertex | openai | azure_openai | anthropic | ollama
RAGOPS_LLM_PROVIDER=vertex
# RAGOPS_LLM_MODEL=
RAGOPS_VERTEX_CREDENTIALS=./vertex_service_account.json

# OpenAI settings
# Prefer RAGOPS_* variables; OPENAI_* are also supported
# RAGOPS_OPENAI_BASE_URL=https://api.openai.com/v1
# RAGOPS_OPENAI_API_KEY=
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_API_KEY=

# Azure OpenAI settings
# RAGOPS_AZURE_OPENAI_API_KEY=
# RAGOPS_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# RAGOPS_AZURE_OPENAI_API_VERSION=2024-02-15-preview
# RAGOPS_AZURE_OPENAI_DEPLOYMENT=gpt-4o
# RAGOPS_AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT=text-embedding-ada-002

# Anthropic settings
# RAGOPS_ANTHROPIC_API_KEY=
# ANTHROPIC_API_KEY=

# Ollama settings
#RAGOPS_OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_BASE_URL=http://localhost:11434
RAGOPS_LOG_LEVEL=ERROR
